# Server configuration
PORT=3000
NODE_ENV=development  # Possible values: development, production, test

# Database configuration
DB_HOST=localhost  # Change to your database host (e.g., an IP or a cloud service URL)
DB_USER=your_db_user  # Replace with actual database username
DB_PASSWORD=your_db_password  # Replace with actual database password
DB_NAME=file_tracking_db  # Replace with the actual database name

# JWT configuration
JWT_SECRET=your_jwt_secret  # Replace with a strong secret key for JWT authentication

# Additional database settings (if needed)
DB_PORT=5432  # Default PostgreSQL port

# CORS configuration (if needed)
CORS_ORIGIN=*  # Change to specific domains in production

# Debugging (optional)
DEBUG_MODE=false  # Set to true for debugging mode
